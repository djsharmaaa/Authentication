        <%- script %>
        <script>
            <% if(flash.success && flash.success.length > 0) {%>
                new Noty({
                        theme: 'relax',
                        type: 'success',
                        layout: 'topright',
                        timeout:1500,
                        text: '<%= flash.success %>',
                    
                        }).show();
           <%} %> 

           <% if(flash.error && flash.success.error > 0) {%>
                new Noty({
                        theme: 'relax',
                        type: 'error',
                        layout: 'topright',
                        timeout:1500,
                        text: '<%= flash.error %>',
                    
                        }).show();
           <%} %> 
        


        </script>


    </body>
